<jnt = 'http://www.jahia.org/jahia/nt/1.0'>

[jmix:blogContent] > jmix:droppableContent

[jnt:blogContent] > jnt:content, jmix:blogContent, mix:title, jmix:tagged, jmix:comments
 - text (string, richtext) i18n

[jnt:blogEntryFormCreation] > jnt:content, jmix:blogContent, mix:title

[jnt:blogEntryFormEdition] > jnt:content, jmix:blogContent, mix:title

[jnt:topBlog] > jnt:content, jmix:blogContent, jmix:list, jmix:pager, mix:title, jmix:renderableList
 - j:subNodesTemplate (string, choicelist[templates=jnt:page,resourceBundle,image]) nofulltext  itemtype = layout

[jnt:topBlogContent] > jnt:content, jmix:blogContent, jmix:list, jmix:pager, mix:title, jmix:renderableList
 - j:subNodesTemplate (string, choicelist[templates=jnt:blogContent,resourceBundle,image]) nofulltext  itemtype = layout

[jnt:topBlogComment] > jnt:content, jmix:blogContent, jmix:list, jmix:pager, mix:title, jmix:renderableList
 - j:subNodesTemplate (string, choicelist[templates=jnt:post,resourceBundle,image]) nofulltext  itemtype = layout

[jnt:addBlogLink] > jnt:content,jmix:blogContent
